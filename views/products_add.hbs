<div class="big-container product-manage-wrapper flexed-item">
  <form action="/prod-add" method="post" class="add-product-form" enctype="multiparty/form-data">
    {{#if success_msg}}
    <p class="msg-success">{{success_msg}}</p>
    {{/if}}
    <h3 class="form-title">Add sneakerss to the collection</h3>
    <div class="form-item-wrapper flexed-item">
      <label for="sneakers-name" class="label-name label">Model name</label>
      <input id="sneakers-name" name="name" type="text" class="input-text input" placeholder="Nike Air Max 90"
        value="air max 1" required>
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneakers-ref" class="label-ref label">RÃ©f.</label>
      <input id="sneakers-ref" name="ref" type="text" class="input-text input" placeholder="ex: NV23498"
        value="NV23498"  required>
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneakers-size" class="label-ref label">Size</label>
      <input id="sneakers-size" 
      type="number" name="sizes" class="input-text input" placeholder="ex: 37" value="42" required>
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneakers-descr" class="label-descr label">Description</label>
      <input id="sneakers-descr" name="description" type="text" class="input-text input"
        placeholder="The better sneakers to run" value="foo bar baz" required>
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneakers-price" class="label-price label">Price</label>
      <input id="sneakers-price" name="price" type="number" class="sneakers-price input" min="1" value="123" required> 
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneaker-img" class="label-price label">Image</label>
      <input id="sneaker-img" name="image" type="file" class="sneakers-price input" required>
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="category" class="label-main-cat label">Main category</label>
      <select id="category" name="category" class="select" required>
        <option value="-1" disabled selected>Choose a category</option>
        <option value="men">Men</option>
        <option value="women">Women</option>
        <option value="kids">Kids</option>
      </select>
    </div>

    <div class="form-item-wrapper flexed-item">
      <label for="tags" class="label">Tags</label>
      {{> form_tags_select}}
    </div>
    <button class="button-primary add-sneakers-btn">Add to collection</button>
  </form>

  <form action="/tag-add" method="post" class="add-tag-form">
    <p id="add-tag-message" class="msg"></p>
    <h3 class="form-title">Add tags</h3>
    <div class="form-item-wrapper flexed-item">
      <label for="tag-label" class="category-name label">Sneaker tag</label>
      <input id="new_tag_name" name="label" type="text" class="input" placeholder="ex: Gangsta" required>
    </div>
    <button id="btn_new_tag" class="button-primary add-category-btn">Create this category</button>
  </form>
</div>